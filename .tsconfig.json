{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@playwright/test"],
    "outDir": "dist"
  },
  "include": ["tests/**/*.ts", "src/**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
